{%- macro render_node(node) -%}
    <ul>
        {%- for key, value in node.items() recursive %}
            <li>
                {{ key }}
                {%- if value is mapping -%}
                    {{ render_node(value) }}
                {%- else -%}
                    {{ value }}
                {%- endif -%}
            </li>
        {%- endfor %}
    </ul>
{%- endmacro -%}

